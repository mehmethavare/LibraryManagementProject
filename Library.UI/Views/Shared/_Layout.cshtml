@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor.HttpContext;
    var userRole = httpContext?.Session?.GetString("role");
    var userId = httpContext?.Session?.GetInt32("userId");

    // KRİTİK EKLEME: Session'dan fotoğraf URL'sini ve kullanıcı adını çekme
    var profileImageUrl = httpContext?.Session?.GetString("profileImageUrl");
    var userName = httpContext?.Session?.GetString("username");
    var displayName = userName?.Split('@')[0].ToUpperInvariant() ?? "Kullanıcı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kütüphane Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
                body {
                        overflow-x: hidden;
                        background-color: #f4f6f9;
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

        }

                #wrapper {
                        display: flex;
                        width: 100%;
                        align-items: stretch;

        }

                #sidebar-wrapper {
                        position: fixed;
                        top: 0;
                        left: 0;
                        height: 100vh;
                        width: 300px;
                        background-color: #2c3e50;
                        color: #fff;
                        display: flex;
                        flex-direction: column;
                        border-right: 1px solid rgba(0,0,0,0.1);
                        overflow-y: auto;
                        z-index: 1000;

        }

                .sidebar-heading {
                        padding: 2.5rem 1rem;
                        text-align: center;
                        font-size: 1.4rem;
                        font-weight: 600;
                        color: #ecf0f1;
                        border-bottom: 1px solid rgba(255, 255, 255, 0.1);

        }

                    .sidebar-heading i {
                            display: block;
                            font-size: 3.5rem;
                            margin-bottom: 15px;
                            color: #ecf0f1;

        }

                .list-group-item {
                        background-color: transparent;
                        color: #bdc3c7;
                        border: none;
                        padding: 1.2rem 1.5rem;
                        font-size: 1.1rem;
                        font-weight: 500;
                        display: flex;
                        align-items: center;
                        transition: all 0.3s;

        }

                    .list-group-item i {
                            width: 35px;
                            font-size: 1.3rem;

        }

                    .list-group-item:hover {
                            background-color: rgba(255, 255, 255, 0.1);
                            color: #fff;
                            text-decoration: none;
                            padding-left: 2rem;

        }

                        .list-group-item:hover i {
                                color: #fff !important;

        }


        /* Alt kısımdaki butonlar için stil */
                .bottom-menu {
                        margin-top: auto;
                        border-top: 1px solid rgba(255, 255, 255, 0.1);
                        padding-top: 10px;
                        padding-bottom: 20px;

        }


        /* YENİ EKLENEN STİL: Kullanıcı Fotoğraf ve İsim Kutusu (Menü üstü) */
                .user-photo-box {
                        display: flex;
                        align-items: center;
                        padding: 10px 15px;
                        margin: 0 0 10px 0; /* Menü elemanlarından ayır */
                        border-bottom: 1px solid rgba(255, 255, 255, 0.1);

        }

                    .user-photo-box img, .user-photo-box i.placeholder-icon {
                            width: 30px; /* Hesabım menüsü için küçük boyut */
                            height: 30px;
                            object-fit: cover;
                            border-radius: 50%;
                            margin-right: 10px;

        }

                    .user-photo-box i.placeholder-icon {
                            font-size: 1.5rem;
                            line-height: 30px;
                            text-align: center;
                            background-color: #34495e;
                            color: #ecf0f1;

        }


        /* HESABIM MENÜSÜ İÇİN ÖZEL FOTOĞRAF STİLİ */
                .menu-photo {
                        width: 25px;
                        height: 25px;
                        object-fit: cover;
                        border-radius: 50%;
                        margin-right: 10px;

        }

                .text-logout {
                        color: #e74c3c !important; /* Çıkış butonu kırmızımsı */

        }

                #page-content-wrapper {
                        width: 100%;
                        padding: 20px;
                        margin-left: 300px;

        }


    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">

            <div class="sidebar-heading">
                <i class="fa-solid fa-book-open"></i>
                Kütüphane Yönetimi
            </div>

            <div class="list-group list-group-flush mt-3">

                <a asp-controller="Home" asp-action="Dashboard" class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-house text-warning"></i> Ana Sayfa
                </a>
                
                    <a asp-controller="Announcements" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-bullhorn text-light"></i> Duyurular
                    </a>
                
                <a asp-controller="Books" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-book text-success"></i> Kitaplar
                </a>

                @if (userRole == "admin")
                {

                    <a asp-controller="BorrowRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-hand-holding-hand text-info"></i> Ödünç İşlemleri
                    </a>

                    <a asp-controller="BookReviews" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-star text-warning"></i> Değerlendirmeler
                    </a>
                    <a asp-controller="UserRequests" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-inbox text-danger"></i> İstek Kutusu
                    </a>
                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-users text-primary"></i> Kullanıcı Yönetimi
                    </a>
                }

                @if (userRole == "user")
                {


                    <a asp-controller="BorrowRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-book-reader text-info"></i> Ödünç Alınanlar
                    </a>

                    <a asp-controller="BookReviews" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-star text-warning"></i> Değerlendirmelerim
                    </a>
                    <a asp-controller="UserRequests" asp-action="MyRequests" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-paper-plane text-light"></i> İsteklerim
                    </a>
                }
            </div>

            <div class="bottom-menu">
                @if (!string.IsNullOrEmpty(userRole))
                {

                    @if (userRole == "user")
                    {
                        @* KRİTİK DÜZELTME: HESABIM MENÜSÜ İÇİN FOTOĞRAF *@
                        <a asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action">
                            @if (!string.IsNullOrEmpty(profileImageUrl))
                            {
                                <img src="@profileImageUrl" class="menu-photo"
                                                        onerror="this.onerror=null; this.src='https://via.placeholder.com/25/34495e/ecf0f1?text=P';" />
                            }
                            else
                            {
                                <i class="fa-solid fa-user-circle text-light"></i>
                            }
                            Hesabım
                        </a>
                    }

                    <a asp-controller="Login" asp-action="Logout" class="list-group-item list-group-item-action text-logout">
                        <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                    </a>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-sign-in-alt"></i> Giriş Yap
                    </a>
                }
            </div>

        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">

                              @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                    </div>
                }
                @* --- BİTİŞ --- *@

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="modalPlaceholder" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
</body>
</html>