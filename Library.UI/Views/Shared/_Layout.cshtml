@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userRole = HttpContextAccessor.HttpContext?.Session?.GetString("role");
    var userId = HttpContextAccessor.HttpContext?.Session?.GetInt32("userId");
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kütüphane Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            overflow-x: hidden;
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            /* 1. İSTEK: Genişlik arttırıldı (250px -> 300px) */
            width: 300px;
            /* 2. İSTEK: Önceki koyu renk geri getirildi */
            background-color: #2c3e50;
            color: #fff;
            display: flex;
            flex-direction: column;
            border-right: 1px solid rgba(0,0,0,0.1);
        }

        .sidebar-heading {
            padding: 2.5rem 1rem;
            text-align: center;
            font-size: 1.4rem;
            font-weight: 600;
            color: #ecf0f1;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-heading i {
                display: block;
                font-size: 3.5rem;
                margin-bottom: 15px;
                color: #ecf0f1;
            }

        .list-group-item {
            background-color: transparent;
            /* Yazı rengi açık gri yapıldı */
            color: #bdc3c7;
            border: none;
            padding: 1.2rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

            .list-group-item i {
                width: 35px;
                font-size: 1.3rem;
                /* İkonların kendi orijinal renklerini koruması için class'a dokunmuyoruz,
                       ancak hoverda beyaz olmaları için aşağıyı ekliyoruz */
            }

            .list-group-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: #fff;
                text-decoration: none;
                padding-left: 2rem;
            }

                /* Hover olunca ikonlar da beyazlaşsın */
                .list-group-item:hover i {
                    color: #fff !important;
                }

        /* Alt kısımdaki butonlar için stil */
        .bottom-menu {
            margin-top: auto;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 10px;
            padding-bottom: 20px;
        }

        .text-logout {
            color: #e74c3c !important; /* Çıkış butonu kırmızımsı */
        }

        #page-content-wrapper {
            width: 100%;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div id="wrapper">
        <div id="sidebar-wrapper">

            <div class="sidebar-heading">
                <i class="fa-solid fa-book-open"></i>
                Kütüphane Yönetimi
            </div>

            <div class="list-group list-group-flush mt-3">

                <a asp-controller="Home" asp-action="Dashboard" class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-house text-warning"></i> Ana Sayfa
                </a>

                <a asp-controller="Books" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="fa-solid fa-book text-success"></i> Kitaplar
                </a>

                @if (userRole == "admin")
                {
                    <a asp-controller="BorrowRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-hand-holding-hand text-info"></i> Ödünç İşlemleri
                    </a>

                    <a asp-controller="BookReviews" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-star text-warning"></i> Değerlendirmeler
                    </a>

                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-users text-primary"></i> Kullanıcı Yönetimi
                    </a>
                }

                @if (userRole == "user")
                {
                    <a asp-controller="BorrowRecords" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-book-reader text-info"></i> Ödünç Alınanlar
                    </a>

                    <a asp-controller="BookReviews" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-star text-warning"></i> Değerlendirmelerim
                    </a>
                }
            </div>

            <div class="bottom-menu">
                @if (userRole == "user")
                {
                    <a asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fa-solid fa-user-circle text-light"></i> Hesabım
                    </a>
                }

                <a asp-controller="Login" asp-action="Logout" class="list-group-item list-group-item-action text-logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                </a>
            </div>

        </div>
        <div id="page-content-wrapper">
            <div class="container-fluid">

              
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                    </div>
                }
                @* --- BİTİŞ --- *@

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="modalPlaceholder" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
</body>
</html>