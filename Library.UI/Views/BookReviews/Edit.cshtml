@model Library.UI.Models.BookReviewUpdateViewModel

@{
    ViewData["Title"] = "Yorumu Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow border-0">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 text-center">
                    <div class="d-inline-block bg-warning bg-opacity-10 p-3 rounded-circle mb-2 text-warning">
                        <i class="fa-solid fa-pen-to-square fa-2x"></i>
                    </div>
                    <h3 class="fw-bold text-dark">Yorumu Düzenle</h3>
                    <p class="text-muted small">Değerlendirmenizi güncellemek için aşağıdaki formu kullanın.</p>
                </div>

                <div class="card-body p-4">

                    @if (!string.IsNullOrEmpty(Model.BookTitle))
                    {
                        <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                            <i class="fa-solid fa-book text-secondary fs-4 me-3"></i>
                            <div>
                                <small class="text-muted text-uppercase fw-bold d-block" style="font-size: 0.7rem;">Değerlendirilen Kitap</small>
                                <span class="fw-bold text-dark">@Model.BookTitle</span>
                            </div>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BookId" />
                        <input type="hidden" asp-for="BookTitle" />

                        <div class="mb-4">
                            <label asp-for="Rating" class="form-label fw-bold">Puanınız</label>
                            <div class="input-group">
                                <select asp-for="Rating" class="form-select border-start-0 ps-0" style="background-color: #f8f9fa; padding-left: 25px;">
                                    <option value="5">⭐⭐⭐⭐⭐ (5 - Mükemmel)</option>
                                    <option value="4">⭐⭐⭐⭐ (4 - Çok İyi)</option>
                                    <option value="3">⭐⭐⭐ (3 - İdare Eder)</option>
                                    <option value="2">⭐⭐ (2 - Kötü)</option>
                                    <option value="1">⭐ (1 - Berbat)</option>
                                </select>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Comment" class="form-label fw-bold">Yorumunuz</label>
                            <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Kitap hakkındaki düşünceleriniz..." style="resize: none;"></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light px-4 border">
                                <i class="fa-solid fa-xmark me-1"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold">
                                <i class="fa-solid fa-check me-1"></i> Kaydet ve Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}