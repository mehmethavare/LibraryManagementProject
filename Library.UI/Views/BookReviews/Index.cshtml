@model IEnumerable<Library.UI.Models.BookReviewViewModel>

@{
    ViewData["Title"] = "Değerlendirmelerim";

    var userRole = Context.Session.GetString("role");
    var currentUserIdString = Context.Session.GetString("userId");
    int.TryParse(currentUserIdString, out int currentUserId);
}

@* 1. SweetAlert2 Kütüphanesi Eklendi *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* 2. Taşmayı Engelleyen ve Metni Bölen CSS */
    .wrapped-comment {
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
        word-break: break-all !important; /* SONNNNN... gibi birleşik metinleri zorla böler */
        white-space: normal !important;
        min-width: 150px;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold text-primary mb-0">
                <i class="fa-solid fa-star me-2"></i>
                @(userRole == "admin" ? "Tüm Değerlendirmeler" : "Değerlendirmelerim")
            </h4>

            <div class="d-flex align-items-center">
                <span class="text-muted small me-2 fw-bold">Sıralama:</span>
                <select id="sortSelect" class="form-select form-select-sm" style="width: auto;" onchange="sortReviews()">
                    <option value="newest">Yeniden Eskiye</option>
                    <option value="oldest">Eskiden Yeniye</option>
                </select>
            </div>
        </div>

        <div class="card-body">
            @* Başarı/Hata Mesajları *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fa-solid fa-check-circle me-2"></i> @Html.Raw(TempData["Success"])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-light text-center border p-4">
                    <i class="fa-regular fa-comment-dots fa-3x text-muted mb-3"></i>
                    <p class="mb-0 text-muted">Henüz herhangi bir kitap değerlendirmesi bulunmuyor.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-sm btn-outline-primary mt-3">Kitapları İncele</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="reviewsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Konu</th>
                                @if (userRole == "admin")
                                {
                                    <th>Kullanıcı</th>
                                }
                                <th>Puan</th>
                                <th style="width: 40%;">Yorum</th>
                                <th>Tarih</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(x => x.Rating).ThenByDescending(x => x.CreatedAt))
                            {
                                <tr data-rating="@item.Rating" data-date="@item.CreatedAt.Ticks">
                                    <td class="fw-bold text-dark">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none text-dark">
                                            @item.BookTitle
                                        </a>
                                    </td>

                                    @if (userRole == "admin")
                                    {
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width:30px; height:30px;">
                                                    <i class="fa-solid fa-user text-secondary small"></i>
                                                </div>
                                                @item.UserName
                                            </div>
                                        </td>
                                    }

                                    <td>
                                        <div class="text-warning small">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (item.Rating >= i) { <i class="fa-solid fa-star"></i> }
                                                else { <i class="fa-regular fa-star text-muted opacity-25"></i> }
                                            }
                                            <span class="text-muted ms-1" style="font-size:0.8em">(@item.Rating)</span>
                                        </div>
                                    </td>

                                    <td>
                                        @* 3. Yorum Alanına 'wrapped-comment' sınıfı ve 'Tamamını Oku' eklendi *@
                                        <div class="wrapped-comment text-secondary small">
                                            @if (!string.IsNullOrEmpty(item.Comment) && item.Comment.Length > 80)
                                            {
                                                <span>@item.Comment.Substring(0, 80)...</span>
                                                <button type="button" class="btn btn-link btn-sm p-0 ms-1 fw-bold text-primary" 
                                                        onclick="showFullReview('@item.Comment.Replace("'", "\\'").Replace("\r\n", " ").Replace("\n", " ")')">
                                                    Tamamını Oku
                                                </button>
                                            }
                                            else
                                            {
                                                @item.Comment
                                            }
                                        </div>
                                    </td>

                                    <td class="text-muted small">
                                        @item.CreatedAt.ToString("dd.MM.yyyy")
                                    </td>

                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            @{ var isCurrentUserOwner = item.UserId == currentUserId; }

                                            @if (userRole != "admin" && isCurrentUserOwner)
                                            {
                                                <a asp-controller="BookReviews" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                                    <i class="fa-solid fa-pen"></i>
                                                </a>

                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" id="delete-form-@item.Id">
                                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('@item.Id')">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </form>
                                            }

                                            @if (userRole == "admin")
                                            {
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" id="delete-form-@item.Id">
                                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete('@item.Id', true)">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // 4. Modern Silme Onayı
    function confirmDelete(id, isAdmin = false) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: isAdmin ? "Yönetici olarak bu yorumu kalıcı olarak sileceksiniz!" : "Bu yorumu silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Evet, Sil',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('delete-form-' + id).submit();
            }
        });
    }

    // 5. Tamamını Oku Popup
    function showFullReview(fullText) {
        Swal.fire({
            title: 'Değerlendirme Detayı',
            html: `<div class="wrapped-comment" style="text-align:left; line-height:1.6;">${fullText}</div>`,
            icon: 'info',
            confirmButtonText: 'Kapat'
        });
    }

    function sortReviews() {
        var selectBox = document.getElementById("sortSelect");
        var selectedValue = selectBox.value;
        var table = document.getElementById("reviewsTable");
        var tbody = table.querySelector("tbody");
        var rows = Array.from(tbody.querySelectorAll("tr"));

        rows.sort(function (rowA, rowB) {
            var ratingA = parseInt(rowA.getAttribute("data-rating"));
            var ratingB = parseInt(rowB.getAttribute("data-rating"));
            var dateA = parseInt(rowA.getAttribute("data-date"));
            var dateB = parseInt(rowB.getAttribute("data-date"));

            if (ratingA !== ratingB) {
                return ratingB - ratingA;
            }

            if (selectedValue === "newest") {
                return dateB - dateA;
            } else {
                return dateA - dateB;
            }
        });

        tbody.innerHTML = "";
        rows.forEach(function (row) {
            tbody.appendChild(row);
        });
    }
</script>