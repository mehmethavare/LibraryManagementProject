@model List<Library.UI.Models.RequestListViewModel>

@{
    ViewData["Title"] = "İsteklerim";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>İsteklerim</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni İstek Oluştur</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 20%;">Talep Konusu</th>
                        <th style="width: 30%;">Mesajınız</th>
                        <th style="width: 15%;">Tarih</th>
                        <th style="width: 10%;">Durum</th>
                        <th style="width: 25%;">Yetkili Yanıtı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Title</td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.Message) && item.Message.Length > 40)
                                {
                                    <span>@item.Message.Substring(0, 40)...</span>
                                    <a href="javascript:void(0);"
                                       class="text-primary small text-decoration-none ms-1"
                                       onclick="showReadModal('Mesajınız', '@System.Web.HttpUtility.JavaScriptStringEncode(item.Message)')">
                                        (Devamı)
                                    </a>
                                }
                                else
                                {
                                    @item.Message
                                }
                            </td>

                            <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>
                                @if (item.Status == 0)
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else if (item.Status == 1)
                                {

                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {

                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                            </td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.AdminResponse))
                                {
                                    if (item.AdminResponse.Length > 30)
                                    {
                                        <span class="text-info">@item.AdminResponse.Substring(0, 30)...</span>
                                        <a href="javascript:void(0);"
                                           class="text-info small text-decoration-none ms-1 fw-bold"
                                           onclick="showReadModal('Yetkili Yanıtı', '@System.Web.HttpUtility.JavaScriptStringEncode(item.AdminResponse)')">
                                            <i class="fa-solid fa-envelope-open-text"></i> Oku
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-info">@item.AdminResponse</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Count == 0)
            {
                <div class="text-center p-3 text-muted">Henüz bir isteğiniz bulunmuyor.</div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="genericReadModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="genericModalTitle">Detay</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <p id="genericModalContent" class="text-break fs-6"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showReadModal(title, content) {
        document.getElementById('genericModalTitle').innerText = title;
        document.getElementById('genericModalContent').innerText = content;
        var myModal = new bootstrap.Modal(document.getElementById('genericReadModal'));
        myModal.show();
    }
</script>