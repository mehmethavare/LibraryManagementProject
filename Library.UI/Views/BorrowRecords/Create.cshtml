@model Library.UI.Models.BorrowRecordCreateViewModel
@{
    ViewData["Title"] = "Confirm Borrow";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white text-center py-3">
            <h4 class="mb-0">Confirm Borrowing</h4>
        </div>
        <div class="card-body text-center p-4">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-4">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                    <strong>Hata!</strong> Ödünç alma işlemi başarısız oldu. Lütfen tekrar deneyin.
                    <div asp-validation-summary="ModelOnly" class="mt-2"></div>
                </div>
            }

            <i class="fa-solid fa-book-reader fa-4x text-success mb-3"></i>
            <h5 class="mb-3">Do you want to borrow this book?</h5>
            <p class="text-muted">Book Reference ID: <strong>@Model.BookId</strong></p>

            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="BookId" />
                <input type="hidden" asp-for="BorrowDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Yes, Borrow It</button>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-light">No, Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}