@using System.Linq
@model Library.UI.Models.BookIndexViewModel

@{
    ViewData["Title"] = "Kitaplar";
    var userRole = Context.Session.GetString("role");
}

@* SweetAlert2 Kütüphanesi *@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-4">

    @* --- ÜST BAŞLIK VE YENİ KİTAP BUTONU (ADMİN) --- *@
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-dark">
            <i class="fa-solid fa-layer-group me-2"></i>Kitap Arşivi
        </h2>

        @if (userRole == "admin")
        {
            <a asp-action="Create" class="btn btn-dark">
                <i class="fa-solid fa-plus me-1"></i> Yeni Kitap
            </a>
        }
    </div>

    @* --- FİLTRELEME ALANI --- *@
    <div class="row mb-4">
        <div class="col-md-4">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-filter text-secondary"></i></span>
                    <select name="category" class="form-select border-start-0 ps-0" onchange="this.form.submit()" style="cursor:pointer;">
                        <option value="Tümü" selected="@(Model.SelectedCategory == null || Model.SelectedCategory == "Tümü")">
                            Tüm Kategoriler
                        </option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.CategoryName" selected="@(Model.SelectedCategory == cat.CategoryName)">
                                @cat.CategoryName
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>

        <div class="col-md-8 d-flex align-items-center justify-content-end">
            @if (!string.IsNullOrEmpty(Model.SelectedCategory) && Model.SelectedCategory != "Tümü")
            {
                <span class="badge bg-info text-dark me-2">Filtre: @Model.SelectedCategory</span>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Filtreyi Temizle</a>
            }
        </div>
    </div>

    @* --- KİTAP LİSTESİ --- *@
    @if (Model.Books == null || Model.Books.Count == 0)
    {
        <div class="alert alert-light text-center p-5 border shadow-sm">
            <i class="fa-solid fa-box-open fa-3x text-muted mb-3"></i>
            @if (Model.SelectedCategory == null || Model.SelectedCategory == "Tümü")
            {
                <h4 class="text-muted">Kütüphane şu an boş.</h4>
                <p class="mb-0">Sisteme kitap eklendiğinde burada görünecektir.</p>
            }
            else
            {
                <h4 class="text-muted">"@Model.SelectedCategory" kategorisine ait kitap bulunamadı.</h4>
                <p class="mb-0">Filtreyi temizleyerek diğer kitapları görebilirsiniz.</p>
            }
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var book in Model.Books)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-up">

                        <div class="position-relative bg-light text-center overflow-hidden rounded-top" style="height: 300px;">
                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                            {
                                <img src="@book.CoverImageUrl"
                                     class="card-img-top h-100 w-100 p-3"
                                     style="object-fit: contain; transition: transform 0.3s ease;"
                                     alt="@book.Title"
                                     onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 text-secondary bg-secondary bg-opacity-10">
                                    <i class="fa-solid fa-book fa-4x opacity-25"></i>
                                </div>
                            }

                            <div class="position-absolute bottom-0 start-0 w-100 p-2 text-start" style="background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
                                @if (book.IsAvailable)
                                {
                                    <span class="badge bg-success shadow-sm">
                                        <i class="fa-solid fa-check me-1"></i> Müsait
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger shadow-sm">
                                        <i class="fa-solid fa-clock me-1"></i> Ödünç Alındı
                                    </span>
                                }
                            </div>

                            @* --- USER: MODERN ONAYLI ÖDÜNÇ ALMA --- *@
                            @if (userRole != "admin" && book.IsAvailable)
                            {
                                <div class="position-absolute top-0 end-0 m-2">
                                    <form asp-controller="BorrowRecords" asp-action="Create" method="post" id="borrow-form-@book.Id" style="display:inline;">
                                        <input type="hidden" name="bookId" value="@book.Id" />
                                        <button type="button" class="btn btn-success btn-sm rounded-circle shadow"
                                                onclick="confirmBorrow('@book.Id', '@book.Title')"
                                                style="width: 40px; height: 40px; padding: 0;" title="Hemen Ödünç Al">
                                            <i class="fa-solid fa-plus fa-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column pt-3">
                            <h6 class="card-title fw-bold text-dark text-truncate" title="@book.Title">
                                @book.Title
                            </h6>
                            <p class="card-text text-muted small mb-3">
                                <i class="fa-solid fa-pen-nib me-1"></i> @(string.IsNullOrEmpty(book.AuthorName) ? "Bilinmiyor" : book.AuthorName)
                            </p>

                            <div class="mt-auto">
                                @if (userRole == "admin")
                                {
                                    <div class="d-flex justify-content-between gap-1">
                                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm flex-grow-1">
                                            <i class="fa-solid fa-pen-to-square"></i> Düzenle
                                        </a>

                                        @* --- ADMIN: MODERN ONAYLI SİLME --- *@
                                        <form asp-action="Delete" asp-route-id="@book.Id" method="post" id="delete-form-@book.Id" style="display:inline;">
                                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@book.Id', '@book.Title')">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-dark btn-sm w-100">
                                        İncele
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* --- MODER POPUP SCRİPTLERİ --- *@
<script>
    // Kullanıcı için Ödünç Alma Onayı
    function confirmBorrow(id, title) {
        Swal.fire({
            title: 'Ödünç Almak İstiyor musunuz?',
            text: '"' + title + '" kitabını ödünç alma listenize ekleyeceksiniz.',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#198754',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Evet, Alıyorum',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('borrow-form-' + id).submit();
            }
        });
    }

    // Admin için Silme Onayı
    function confirmDelete(id, title) {
        Swal.fire({
            title: 'Kitabı Sil?',
            text: '"' + title + '" kitabı kalıcı olarak silinecek. Emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('delete-form-' + id).submit();
            }
        });
    }
</script>

<style>
    .hover-up {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-up:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

            .hover-up:hover img {
                transform: scale(1.05);
            }
</style>