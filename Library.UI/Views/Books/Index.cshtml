@model IEnumerable<Library.UI.Models.BookListViewModel>

@{
    ViewData["Title"] = "Kitaplar";
    var userRole = Context.Session.GetString("role");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-dark">
            <i class="fa-solid fa-layer-group me-2"></i>Kitap Arşivi
        </h2>

        @if (userRole == "admin")
        {
            <a asp-action="Create" class="btn btn-dark">
                <i class="fa-solid fa-plus me-1"></i> Yeni Kitap
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center p-5 border shadow-sm">
            <i class="fa-solid fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Kütüphane şu an boş.</h4>
            <p class="mb-0">Sisteme kitap eklendiğinde burada görünecektir.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var book in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-up">
                        <div class="position-relative bg-light text-center overflow-hidden rounded-top" style="height: 280px;">
                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                            {
                                <img src="@book.CoverImageUrl" class="card-img-top h-100 w-100" style="object-fit: cover;"
                                     alt="@book.Title" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 text-secondary">
                                    <i class="fa-solid fa-book fa-4x opacity-25"></i>
                                </div>
                            }



                            <div class="position-absolute bottom-0 start-0 w-100 p-2 text-start" style="background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);">
                                @if (book.IsAvailable)
                                {
                                    <span class="badge bg-success shadow-sm">
                                        <i class="fa-solid fa-check me-1"></i> Müsait
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger shadow-sm">
                                        <i class="fa-solid fa-clock me-1"></i> Ödünç Alındı
                                    </span>
                                }
                            </div>
                            @* Hemen Üste Çıkan div'in hemen altına ekleyin *@
                            @if (userRole != "admin" && book.IsAvailable)
                            {
                                @* 🚨 HIZLI EKLE BUTONU (Sadece User ve Müsait Kitaplar için) *@
                                <div class="position-absolute top-0 end-0 m-2">
                                    <form asp-controller="BorrowRecords" asp-action="Create" method="post" style="display:inline;">
                                        <input type="hidden" name="bookId" value="@book.Id" />
                                        <button type="submit" class="btn btn-success btn-sm rounded-circle shadow" style="width: 35px; height: 35px; padding: 0;">
                                            <i class="fa-solid fa-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column pt-3">

                            <h6 class="card-title fw-bold text-dark text-truncate" title="@book.Title">
                                @book.Title
                            </h6>
                            <p class="card-text text-muted small mb-3">
                                <i class="fa-solid fa-pen-nib me-1"></i> @(string.IsNullOrEmpty(book.AuthorName) ? "Bilinmiyor" : book.AuthorName)
                            </p>
                            <div class="mt-auto">

    @* ========================================================== *@
    @* ROL KONTROLÜ VE BUTONLAR *@
    @* ========================================================== *@
    
    @if (userRole == "admin")
    {
        @* ADMIN İŞLEMLERİ: Düzenle ve Sil *@
        <div class="d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm flex-grow-1 me-1">
                <i class="fa-solid fa-pen-to-square"></i> Düzenle
            </a>
            
            @* Silme Formu *@
            <form asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu kitabı kalıcı olarak silmek istediğinizden emin misiniz?');">
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fa-solid fa-trash-can"></i> Sil
                </button>
            </form>
        </div>
    }
    else
    {
       
     
        @* User İncele butonu *@
        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-dark btn-sm w-100">
            İncele
        </a>
    }
</div>
                          
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-up {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-up:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>