@model Library.UI.Models.BookDetailViewModel

@{
    ViewData["Title"] = Model.Title;
    var userRole = Context.Session.GetString("role");
    // Kullanıcı oturum bilgilerini alıyoruz
    var currentUserId = Context.Session.GetInt32("userId");
    var hasUserReviewed = false;

    // Eğer kullanıcı giriş yapmışsa ve yorum listesi boş değilse, daha önce yorum yapıp yapmadığını kontrol et
    if (currentUserId.HasValue && Model.Reviews != null)
    {
        hasUserReviewed = Model.Reviews.Any(r => r.UserId == currentUserId.Value);
    }
}

<div class="container mt-5 mb-5">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-0">
            <div class="row g-0">

                <div class="col-md-4 bg-light text-center d-flex align-items-center justify-content-center p-4">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: contain;"
                             alt="@Model.Title" onerror="this.onerror=null;this.src='/images/placeholder.png';" />
                    }
                    else
                    {
                        <i class="fa-solid fa-book fa-6x text-secondary opacity-25"></i>
                    }
                </div>

                <div class="col-md-8 p-4 p-lg-5">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-secondary mb-2">@(Model.CategoryName ?? "Genel")</span>
                            <h2 class="fw-bold mb-1">@Model.Title</h2>
                            <h5 class="text-muted"><i class="fa-solid fa-feather me-2"></i>@(Model.AuthorName ?? "Yazar Bilinmiyor")</h5>

                            @if (!string.IsNullOrEmpty(Model.PublisherName))
                            {
                                <h6 class="text-muted mt-2">
                                    <i class="fa-solid fa-building me-2"></i>@Model.PublisherName
                                </h6>
                            }

                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <div class="mt-3">
                                    <span class="badge bg-light text-dark border p-2">
                                        <i class="fa-solid fa-map-pin text-danger me-2"></i> Raf Konumu: <strong>@Model.Location</strong>
                                    </span>
                                </div>
                            }
                        </div>

                        @if (userRole == "admin")
                        {
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen"></i></a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger" style="border-top-left-radius:0; border-bottom-left-radius:0;"><i class="fa-solid fa-trash"></i></button>
                                </form>
                            </div>
                        }
                    </div>

                    <hr class="my-4">

                    <div class="row mb-4">
                        <div class="col-6">
                            <small class="text-uppercase text-muted fw-bold">Yayın Yılı</small>
                            <p class="fs-5">@(Model.PublishYear.HasValue ? Model.PublishYear.Value.ToString() : "-")</p>
                        </div>
                        <div class="col-6">
                            <small class="text-uppercase text-muted fw-bold">Ortalama Puan</small>
                            <div class="text-warning">
                                @if (Model.AverageRating > 0)
                                {
                                    <span>@Model.AverageRating.ToString("0.0")</span> <i class="fa-solid fa-star"></i>
                                }
                                else
                                {
                                    <span class="text-muted small">Henüz puanlanmadı</span>
                                }
                            </div>
                        </div>
                    </div>

                    @* ======= KRİTİK DEĞİŞİKLİK BURADA BAŞLAR ======= *@
                    <div class="mt-auto">
                        @if (Model.IsAvailable)
                        {
                            @* Tarayıcı uyarısı yerine Modalı açan buton *@
                            <button type="button"
                                    class="btn btn-success btn-lg px-5 w-100 w-md-auto"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmBorrowModal"
                                    data-book-id="@Model.Id"
                                    data-book-title="@Model.Title">
                                <i class="fa-solid fa-book-reader me-2"></i> Ödünç Al
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg px-5 w-100 w-md-auto" disabled>
                                <i class="fa-solid fa-lock me-2"></i> Ödünç Alındı
                            </button>
                        }
                    </div>
                    @* ======= KRİTİK DEĞİŞİKLİK BURADA BİTER ======= *@
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-8">
            <h4 class="fw-bold mb-4">Okuyucu Yorumları (@(Model.Reviews?.Count ?? 0))</h4>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                foreach (var review in Model.Reviews)
                {
                    <div class="card mb-3 border-0 bg-white shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <h6 class="fw-bold mb-0">@review.UserName</h6>
                                <small class="text-muted">@review.Date.ToString("dd.MM.yyyy")</small>
                            </div>
                            <div class="mb-2 text-warning small">
                                @for (int i = 0; i < review.Rating; i++)
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                            </div>
                            <p class="mb-0 text-secondary">@review.Comment</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Henüz yorum yapılmamış. İlk yorumu siz yapın!</p>
            }
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Puan Ver</h5>

                    @if (!string.IsNullOrEmpty(userRole))
                    {
                        if (hasUserReviewed)
                        {
                            <div class="alert alert-warning text-center border-0 bg-warning-subtle text-warning-emphasis">
                                <i class="fa-solid fa-circle-check fa-3x mb-3"></i>
                                <h6 class="fw-bold">Değerlendirme Mevcut</h6>
                                <p class="small mb-0">Bu kitabı daha önce puanladınız.</p>
                            </div>
                        }
                        else
                        {
                            <form asp-action="AddReview" method="post">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <div class="mb-3">
                                    <select name="NewRating" class="form-select" required>
                                        <option value="" disabled selected>Puan Seçin</option>
                                        <option value="5">5 - Mükemmel</option>
                                        <option value="4">4 - Çok İyi</option>
                                        <option value="3">3 - İdare Eder</option>
                                        <option value="2">2 - Kötü</option>
                                        <option value="1">1 - Çok Kötü</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <textarea name="NewComment" class="form-control" rows="3" placeholder="Yorumunuz..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-dark w-100">Gönder</button>
                            </form>
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="small text-muted">Yorum yapmak için giriş yapmalısınız.</p>
                            <a asp-controller="Login" asp-action="Index" class="btn btn-outline-dark btn-sm">Giriş Yap</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@* ======= MODAL PENCERESİ VE JAVASCRIPT BURADA BAŞLAR ======= *@

<div class="modal fade" id="confirmBorrowModal" tabindex="-1" aria-labelledby="confirmBorrowModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmBorrowModalLabel"><i class="fa-solid fa-book-reader me-2"></i> Ödünç Alma Onayı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form asp-controller="BorrowRecords" asp-action="Create" method="post" id="borrowForm">
                <div class="modal-body">
                    <p>
                        **<span id="bookTitlePlaceholder" class="fw-bold"></span>** adlı kitabı ödünç almak istediğinize emin misiniz?
                    </p>
                    <input type="hidden" name="bookId" id="modalBookId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Tamam, Ödünç Al</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // jQuery hazır olduğunda çalıştır
        $(document).ready(function () {

            // confirmBorrowModal açılmadan hemen önce tetiklenir
            $('#confirmBorrowModal').on('show.bs.modal', function (event) {

                var button = $(event.relatedTarget); // Modalı tetikleyen buton
                var bookId = button.data('book-id');
                var bookTitle = button.data('book-title');

                // Modal içeriğini güncelle
                var modal = $(this);

                // 1. Gizli BookId input alanına değeri yerleştir
                modal.find('#modalBookId').val(bookId);

                // 2. Kitap adını placeholder'a yerleştir
                modal.find('#bookTitlePlaceholder').text(bookTitle);
            });
        });
    </script>
}
@* ======= MODAL PENCERESİ VE JAVASCRIPT BURADA BİTER ======= *@