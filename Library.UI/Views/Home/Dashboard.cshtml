
@model Library.UI.Models.UserDashboardViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
    dynamic warnings = ViewData["UserWarnings"] as dynamic;
    string? userStatusMessage = null;
    string alertClass = "alert-info";
    var apiBaseUrl = "https://localhost:7080/";
    // --- UYARI HESAPLAMA MANTIĞI ---
    if (warnings != null)
    {
        try
        {
            int warningCount = (int)warnings.warningCount;
            bool isLocked = (bool)warnings.isLocked;
            bool isDeleted = (bool)warnings.isDeleted;

            if (isDeleted)
            {
                alertClass = "alert-dark";
                userStatusMessage = "❌ HESABINIZ SİLİNMİŞTİR. Sistemden KALDIRILDINIZ.";
            }
            else if (isLocked)
            {
                alertClass = "alert-danger";
                userStatusMessage = "🛑 HESABINIZ KİLİTLENDİ. Admin onayı olmadan kullanılamaz.";
            }
            else if (warningCount >= 1)
            {
                alertClass = "alert-warning";
                userStatusMessage = $"⚠️ DİKKAT: {warningCount} adet kural ihlali uyarınız var.";
            }
        }
        catch { }
    }
}

<div class="container py-4">

    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark">Hoş Geldiniz!</h2>
        <p class="text-muted">Kütüphane durumunuzu ve işlemlerinizi buradan takip edebilirsiniz.</p>

        @if (!string.IsNullOrEmpty(userStatusMessage))
        {
            <div class="alert @alertClass d-inline-block px-5 shadow-sm">
                @userStatusMessage
            </div>
        }
    </div>

    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="fw-bold m-0"><i class="fa-solid fa-book-open-reader me-2 text-primary"></i>Elimdeki Kitaplar</h4>
            <a asp-controller="BorrowRecords" asp-action="Index" class="btn btn-sm btn-outline-primary">Geçmişi Gör</a>
        </div>

        @if (Model.ActiveBorrows != null && Model.ActiveBorrows.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var item in Model.ActiveBorrows)
                {
                    // --- DÜZELTME BAŞLANGICI ---

                    // 1. Tarih null ise varsayılan bir tarih ata veya işlem yapma
                    // Eğer veritabanında ReturnDate boşsa, mantıken hesaplama yapılamaz.
                    // Güvenlik için: Eğer tarih yoksa 'Bugün' kabul ediyoruz.
                    DateTime deadline = item.ReturnDate ?? DateTime.Now;

                    // 2. Artık 'deadline' normal DateTime olduğu için matematik işlemi yapabiliriz.
                    var timeLeft = deadline - DateTime.Now;

                    // 3. TotalDays artık kullanılabilir
                    bool isLate = timeLeft.TotalDays < 0;
                    int daysLeft = (int)timeLeft.TotalDays;

                    // --- DÜZELTME BİTİŞİ ---

                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm hover-up">
                            <div class="position-relative bg-light text-center overflow-hidden rounded-top" style="height: 250px;">
                                <img src="@(string.IsNullOrEmpty(item.CoverImageUrl)
                                                 ? "/images/placeholder.png"
                                                 : (item.CoverImageUrl.StartsWith("http") ? item.CoverImageUrl : apiBaseUrl + item.CoverImageUrl))"
                             class="card-img-top h-100 w-100 p-3"
                             style="object-fit: contain;"
                             alt="@item.BookTitle"
                             onerror="this.onerror=null;this.src='/images/placeholder.png';" />


                                <div class="position-absolute top-0 end-0 m-2">
                                    @if (item.ReturnDate.HasValue)
                                    {
                                        if (isLate)
                                        {
                                            <span class="badge bg-danger shadow">Gecikti!</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success shadow">@daysLeft gün kaldı</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary shadow">Tarih Yok</span>
                                    }
                                </div>
                            </div>

                            <div class="card-body d-flex flex-column text-center">
                                <h6 class="card-title fw-bold text-truncate" title="@item.BookTitle">@item.BookTitle</h6>
                                <p class="small text-muted mb-2">
                                    Son Teslim:
                                    <span class="fw-bold @(isLate ? "text-danger" : "text-dark")">
                                        @(item.ReturnDate.HasValue? item.ReturnDate.Value.ToString("dd.MM.yyyy") : "-")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-light border text-center py-4 shadow-sm">
                <i class="fa-solid fa-check-circle fa-2x text-success mb-2"></i>
                <p class="mb-0 text-muted">Şu an ödünç aldığınız okunmamış kitap bulunmuyor.</p>
                <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-sm mt-3">Kitap Ödünç Al</a>
            </div>
        }
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="m-0 fw-bold text-dark"><i class="fa-solid fa-bullhorn me-2 text-warning"></i>Duyurular</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @if (Model.Announcements != null && Model.Announcements.Any())
                        {
                            @foreach (var ann in Model.Announcements.Take(3))
                            {
                                <li class="list-group-item p-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold mb-1">@ann.Title</h6>
                                            <p class="small text-muted mb-0">
                                                @(ann.Content.Length > 100 ? ann.Content.Substring(0, 100) + "..." : ann.Content)
                                            </p>
                                        </div>
                                        <span class="badge bg-light text-secondary border">@ann.Date.ToString("dd.MM")</span>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center text-muted py-4">Henüz duyuru yok.</li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-white text-center border-0 py-3">
                    <a asp-controller="Announcements" asp-action="Index" class="btn btn-sm btn-light w-100">Tüm Duyurular</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 fw-bold text-dark"><i class="fa-solid fa-paper-plane me-2 text-success"></i>İsteklerim</h5>
                    <a asp-controller="UserRequests" asp-action="Create" class="btn btn-sm btn-success rounded-circle" title="Yeni İstek">+</a>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @if (Model.MyRequests != null && Model.MyRequests.Any())
                        {
                            @foreach (var req in Model.MyRequests.Take(4))
                            {
                                // Durum Rengi ve Metni Ayarlama
                                string badgeClass = "bg-secondary";
                                string statusText = "Bilinmiyor";

                                switch (req.Status)
                                {
                                    case 1: // Pending (Varsayım)
                                        badgeClass = "bg-warning text-dark";
                                        statusText = "Bekliyor";
                                        break;
                                    case 2: // Resolved/Approved
                                        badgeClass = "bg-success";
                                        statusText = "Onaylandı";
                                        break;
                                    case 3: // Rejected
                                        badgeClass = "bg-danger";
                                        statusText = "Reddedildi";
                                        break;
                                }

                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <div class="text-truncate me-2">
                                        <div class="fw-bold text-dark small">@req.Title</div>
                                        <small class="text-muted" style="font-size: 0.75rem;">@req.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <span class="badge @badgeClass rounded-pill" style="font-size: 0.7rem;">@statusText</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center text-muted py-4">
                                <i class="fa-regular fa-folder-open mb-2 d-block"></i>
                                Henüz istek göndermediniz.
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer bg-white text-center border-0 py-3">
                    <a asp-controller="UserRequests" asp-action="MyRequests" class="btn btn-sm btn-light w-100">Tümünü Gör</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-3">
            <a asp-controller="Books" asp-action="Index" class="btn btn-outline-dark w-100 py-3 border-2 border-dashed">
                <i class="fa-solid fa-magnifying-glass me-2"></i> Yeni Kitap Ara
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-controller="Profile" asp-action="Index" class="btn btn-outline-dark w-100 py-3 border-2 border-dashed">
                <i class="fa-solid fa-user-gear me-2"></i> Profil Ayarları
            </a>
        </div>
    </div>

</div>

<style>
    .hover-up {
        transition: transform 0.2s;
    }

        .hover-up:hover {
            transform: translateY(-5px);
        }

    .border-dashed {
        border-style: dashed !important;
    }
</style>