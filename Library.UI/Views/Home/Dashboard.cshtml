@{
    ViewData["Title"] = "Dashboard";
    var userRole = ViewBag.UserRole as string;
}

<div class="container-fluid mt-4">
    <h2 class="mb-3">Dashboard</h2>
    <p class="text-muted">Welcome to the library management system.</p>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0 d-flex flex-row justify-content-between align-items-center">
                <div><h3 class="fw-bold text-primary mb-0">0</h3><span class="text-muted">Total Books</span></div>
                <i class="fa-solid fa-book fa-2x text-dark"></i>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0 d-flex flex-row justify-content-between align-items-center">
                <div><h3 class="fw-bold text-primary mb-0">0</h3><span class="text-muted">Total Users</span></div>
                <i class="fa-solid fa-users fa-2x text-dark"></i>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 shadow-sm border-0 d-flex flex-row justify-content-between align-items-center">
                <div><h3 class="fw-bold text-primary mb-0">0</h3><span class="text-muted">Active Borrows</span></div>
                <i class="fa-solid fa-hand-holding fa-2x text-dark"></i>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white border-0 pt-4 pb-2">
            <h4 class="mb-0 fw-bold">Quick Access</h4>
        </div>
        <div class="card-body">
            <div class="list-group list-group-flush">

                <a asp-controller="Books" asp-action="Index" class="list-group-item list-group-item-action border-0 px-0 py-2">
                    <i class="fa-solid fa-book text-success me-2"></i> Book Management
                </a>

                <a asp-controller="BorrowRecords" asp-action="Index" class="list-group-item list-group-item-action border-0 px-0 py-2">
                    <i class="fa-solid fa-rotate text-info me-2"></i> Borrowed Books
                </a>

                @if (userRole == "admin")
                {
                    <a asp-controller="Reviews" asp-action="Index" class="list-group-item list-group-item-action border-0 px-0 py-2">
                        <i class="fa-solid fa-star text-warning me-2"></i> Reviews
                    </a>

                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action border-0 px-0 py-2">
                        <i class="fa-solid fa-users text-primary me-2"></i> User Management
                    </a>
                }
            </div>
        </div>
    </div>
</div>