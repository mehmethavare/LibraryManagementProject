@model IEnumerable<Library.UI.Models.UserListViewModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kullanıcı Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-user-plus"></i> Yeni Kullanıcı
        </a>
    </div>

    @if (TempData["SweetError"] != null)
    {
        <div class="alert alert-warning">
            @Html.Raw(TempData["SweetError"])
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Ad</th>
                        <th class="py-3">Soyad</th>
                        <th class="py-3">E-Posta</th>
                        <th class="py-3">Telefon</th>
                        <th class="py-3">Rol / Durum</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    @if (item.IsDeleted)
                                    {
                                        <span class="badge bg-dark">Silinmiş Hesap</span>
                                    }
                                    else if (item.IsLocked)
                                    {
                                        <span class="badge bg-danger">Kilitli Hesap</span>
                                    }
                                    else
                                    {
                                        <span class="badge @(item.Role == "Admin" ? "bg-danger" : "bg-secondary")">
                                            @item.Role
                                        </span>
                                    }
                                </td>

                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        @if (item.IsLocked && !item.IsDeleted)
                                        {
                                            <form asp-action="Unlock" asp-route-id="@item.Id" method="post" id="unlock-form-@item.Id" class="d-inline">
                                                <button type="button" class="btn btn-sm btn-success" title="Kilidi Kaldır"
                                                        onclick="confirmUnlock('@item.Id', '@item.Name @item.Surname')">
                                                    <i class="fa-solid fa-lock-open"></i> Aç
                                                </button>
                                            </form>
                                        }

                                        @if (!item.IsLocked && !item.IsDeleted)
                                        {
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <i class="fa-solid fa-circle-info"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" id="delete-form-@item.Id" class="d-inline">
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Sil"
                                                        onclick="confirmDelete('@item.Id', '@item.Name @item.Surname')">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // SİLME ONAYI
    function confirmDelete(id, userName) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: userName + " kullanıcısını silmek istediğinize emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('delete-form-' + id).submit();
            }
        })
    }

    // KİLİT AÇMA ONAYI
    function confirmUnlock(id, userName) {
        Swal.fire({
            title: 'Kilidi Aç?',
            text: userName + " kullanıcısının hesabı tekrar aktif edilsin mi?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#198754',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Evet, Kilidi Aç!',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('unlock-form-' + id).submit();
            }
        })
    }
</script>

@if (TempData["Success"] != null)
{
    <script>Swal.fire({ icon: 'success', title: 'Başarılı!', html: '@Html.Raw(TempData["Success"])', timer: 3000 });</script>
}
@if (TempData["Error"] != null)
{
    <script>Swal.fire({ icon: 'error', title: 'Hata!', html: '@Html.Raw(TempData["Error"])', confirmButtonColor: '#d33' });</script>
}