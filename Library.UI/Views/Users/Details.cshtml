@model Library.UI.Models.UserUpdateViewModel

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white text-center py-4">
            <i class="fa-solid fa-circle-user fa-4x mb-2"></i>
            <h3 class="mb-0">@Model.Name @Model.Surname</h3>
            <span class="badge bg-light text-info mt-2">@Model.Role</span>
        </div>

        <div class="card-body p-4">
            <h5 class="text-muted border-bottom pb-2 mb-3">Hesap Bilgileri</h5>

            <div class="mb-3">
                <label class="fw-bold text-secondary d-block">E-Posta Adresi</label>
                <span class="fs-5"><i class="fa-solid fa-envelope me-2 text-muted"></i>@Model.Email</span>
            </div>

            <div class="mb-3">
                <label class="fw-bold text-secondary d-block">Telefon Numarası</label>
                <span class="fs-5">
                    <i class="fa-solid fa-phone me-2 text-muted"></i>
                    @(string.IsNullOrEmpty(Model.PhoneNumber) ? "-" : Model.PhoneNumber)
                </span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Listeye Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fa-solid fa-pen"></i> Düzenle
                </a>
            </div>
        </div>
    </div>
</div>